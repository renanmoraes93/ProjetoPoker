FROM node:20-alpine

# Nenhuma dependência de sistema adicional necessária

# Criar diretório de trabalho
WORKDIR /app

# Copiar package.json e package-lock.json
COPY package*.json ./

# Instalar dependências (incluindo dev dependencies)
RUN npm install

# Instalar nodemon globalmente para hot reload
RUN npm install -g nodemon

# Copiar código fonte
COPY . .

# Sem necessidade de diretório de banco local (usando Postgres no Docker Compose)

# Expor porta
EXPOSE 5000

# Comando padrão (pode ser sobrescrito no docker-compose)
CMD ["npm", "run", "dev"]
