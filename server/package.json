{
  "name": "gorilas-poker-server",
  "version": "1.0.0",
  "description": "Backend do Gorila'z Poker Club",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "init-db": "node scripts/initDatabase.js",
    "lint": "eslint . --ext .js --max-warnings=0",
    "typecheck": "tsc --allowJs --checkJs --noEmit",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4",
    "typescript": "^5.9.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "script"
    },
    "rules": {
      "no-empty": ["error", { "allowEmptyCatch": true }],
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  }
}
